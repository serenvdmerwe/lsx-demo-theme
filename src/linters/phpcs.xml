<?xml version="1.0"?>
<ruleset name="LightSpeed PHP Coding Standards">
    <description>Custom PHPCS ruleset for LightSpeed WordPress development</description>
    
    <!-- Include WordPress standards -->
    <rule ref="WordPress-Core" />
    <rule ref="WordPress-Docs" />
    <rule ref="WordPress-Extra" />
    
    <!-- Include WordPress security best practices -->
    <rule ref="WordPress.Security" />
    
    <!-- Files to check -->
    <file>.</file>
    
    <!-- Files and directories to exclude -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    
    <!-- Theme-specific configurations -->
    <config name="text_domain" value="lsx-theme"/>
    <config name="minimum_supported_wp_version" value="6.0"/>
    
    <!-- Allow theme template files to use translation without escaping -->
    <rule ref="WordPress.Security.EscapeOutput">
        <properties>
            <property name="customAutoEscapedFunctions" type="array">
                <element value="__"/>
                <element value="_e"/>
                <element value="_x"/>
            </property>
        </properties>
    </rule>
    
    <!-- Scan only PHP files -->
    <arg name="extensions" value="php"/>
    
    <!-- Show progress, sniff codes, and source in output -->
    <arg value="ps"/>
    
    <!-- Use colors in output -->
    <arg name="colors"/>
    
    <!-- Warning severity -->
    <arg name="warning-severity" value="5"/>
    
    <!-- Error severity -->
    <arg name="error-severity" value="5"/>
</ruleset>
